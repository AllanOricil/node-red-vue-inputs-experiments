{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "node_modules/@types/readable-stream"]
}
